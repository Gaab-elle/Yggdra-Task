{
    "compilerOptions": {
        "baseUrl": ".",
        "allowJs": true,
        "checkJs": false,
        "jsx": "preserve",
        "moduleResolution": "node",
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "types": ["node"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "noEmit": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": ["resources/js/*"],
            "ziggy-js": ["./vendor/tightenco/ziggy"]
        }
    },
    "include": [
        "resources/js/**/*",
        "resources/js/**/*.vue",
        "resources/js/**/*.js",
        "resources/js/**/*.ts"
    ],
    "exclude": ["node_modules", "public", "vendor", "storage", "bootstrap/cache"],
    "vueCompilerOptions": {
        "target": 3
    }
}
